{
  "$schema": "vscode://schemas/settings/workspace",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.formatOnSave": false,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.wordWrap": "off",
  "emmet.showSuggestionsAsSnippets": false,
  "emmet.useInlineCompletions": true,
  "errorLens.codeLensEnabled": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock",
    "README.md": "LICENSE.txt",
    ".eslintrc.*": ".eslintignore, .prettierrc.*, .eslintrc-auto-import.json"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/obj": true,
    "**/bin": false
  },
  "files.associations": {
    "*.ps": "powershell",
    "*.json": "jsonc",
    "*.jsonpb": "json",
    "*.sql": "postgres"
  },
  "markdownlint.config": {
    "MD013": false,
    "MD041": false
  },
  "prettier.configPath": ".prettierrc",
  "eslint.enable": true,
  "eslint.lintTask.enable": true,
  "tasks-panel.search.gruntTasks": false,
  "tasks-panel.search.gulpTasks": false,
  "tasks-panel.search.npmTasks": true,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  },
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "javascript",
    "html",
    "css",
    "javascriptreact",
    "json",
    "yaml",
    "sql"
  ],
}
